# Cirro CLI
alias c="cirro-cli"

# -- client
alias ccl="cirro-cli client"
alias cclb="cirro-cli client build"

# -- server
alias cse="cirro-cli server"
alias cseq="cirro-cli server queue"

# -- db
alias cdb="cirro-cli db"
alias cdbm="cirro-cli db migrate"
alias cdbr="cirro-cli db rollback"
    # -- Snap
alias cdbs="cirro-cli db snap"
alias cdbsc="cirro-cli db snap create"
alias cdbsr="cirro-cli db snap restore"

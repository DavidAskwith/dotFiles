# -- docker
alias cdo="cirro-cli docker"
alias cdor="cirro-cli docker restart"
alias cdod="cirro-cli docker down"
alias cdou="cirro-cli docker up"

# Custom CLIish 
cgco() {
    git fetch --all

    crev
    git stash
    git checkout $1
    git pull

    cleg
    git stash
    git checkout $1
    git pull

    capi
    git stash
    git checkout $1
    git pull

    clib
    git stash
    git checkout $1
    git pull
}

alias cgcor="cgco release/staging"

alias clears=clear

alias clear_scrollback='printf "\033c"'
alias clear_history='cat /dev/null > ~/.bash_history && cat /dev/null > ~/.zsh_history && history -c'

alias appcli="docker exec -ti cirro-app /bin/bash"

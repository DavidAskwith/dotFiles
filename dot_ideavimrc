set number
set ignorecase
set hls

" Plugins
set commentary
set surround
set ideamarks
set ideajoin
set match.it

sethandler <c-l> a:vim
sethandler <c-h> a:vim
sethandler <c-j> a:vim
sethandler <c-k> a:vim
nnoremap <c-h> <c-w>h
nnoremap <c-l> <c-w>l
nnoremap <c-j> <c-w>j
nnoremap <c-k> <c-w>k

vnoremap // y/\V<C-R>=escape(@",'/\')<CR><CR>
